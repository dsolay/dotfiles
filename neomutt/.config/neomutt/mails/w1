## Receive options.
set imap_user = "rgonzalez@betacode.dev"
set imap_pass = "$my_w1_pass"
set folder = "imaps://$imap_user@imap.gmail.com:993/"
set spoolfile= "+INBOX"
set record = +"Sent Mail"
set postponed= +Drafts
set trash= +Trash
mailboxes = "+INBOX" "+Sent Mail" "+Drafts" "+Spam" "+Trash"

## Configure SMTP Settings
set smtp_url = "smtp://$imap_user:$imap_pas@outlook.office365.com:587/"
set realname = "Roman Gonzalez"
set from = "rgonzalez@betacode.dev"
set hostname = "outlook.office365.com"
set use_from = yes

## Connection options
set ssl_force_tls = yes
unset ssl_starttls

### Hook -- IMPORTANT!
account-hook $folder "set imap_user=rgonzalez@betacode.dev imap_pass=$my_w1_pass"
