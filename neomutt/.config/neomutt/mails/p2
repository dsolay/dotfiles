## Receive options.
set imap_user = "solay2516@gmail.com"
set imap_pass = "$my_p2_pass"
set folder = "imaps://$imap_user@imap.gmail.com:993/"
set spoolfile= "+INBOX"
set record = "+[Gmail]/Sent Mail"
set postponed= "+[Gmail]/Drafts"
set trash= "+[Gmail]/Trash"
mailboxes = "+INBOX" "+[Gmail]/Sent Mail" "+[Gmail]/Drafts" "+[Gmail]/Spam" "+[Gmail]/Trash"

## Configure SMTP Settings
set smtp_url = "smtps://$imap_user:$imap_pass@smtp.gmail.com"
set realname = "Roman Gonzalez"
set from = "solay2516@gmail.com"
set hostname = "gmail.com"
set use_from = yes

## Connection options
set ssl_force_tls = yes
unset ssl_starttls

### Hook -- IMPORTANT!
account-hook $folder "set imap_user=solay2516@gmail.com imap_pass=$my_p2_pass"
