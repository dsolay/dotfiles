#! /bin/bash

file=$(basename -- "$1")
format="${file##*.}"
filename="${file%.*}"

ouput_size=$2
gravity=${3:-'center'}
IFS='x' read -ra dimensions <<< "$ouput_size"

convert \
  -strip \
  -interlace Plane \
  -gaussian-blur 0.05 \
  -quality 80% \
  -define $format:size=$ouput_size $file \
  -thumbnail $ouput_size^ \
  -gravity $gravity \
  -extent $ouput_size \
  "${filename}_w_${dimensions[0]}.${format}"
