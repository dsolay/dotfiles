window_id="$1"
window_class="$2"

case "$window_class" in
	my_float_window)
		echo "state=floating"
		;;
	* )
		case "$(xprop -id "$window_id" _NET_WM_WINDOW_TYPE)" in
		*_NET_WM_WINDOW_TYPE_DIALOG*)
			echo "state=floating"
			;;
		*_NET_WM_WINDOW_TYPE_NOTIFICATION*)
			echo "layer=above" # FIXME does not seem to workâ€¦
			;;
		*)
			echo "state=tiled"
			;;
		esac
		;;
esac
